<launch>
  <arg name="rosbag" default="false" />
  <arg name="RGB_CAMERA_INFO" value="/kinect_head/rgb/camera_info" />
  <include file="$(find friedegg_generator)/launch/load_rosbag.launch" if="$(arg rosbag)">
      <arg name="bagname" value="pan_detect.bag"/>
  </include>
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find friedegg_generator)/config/pan_detect.rviz"/>

  <node name="tf_transform_cloud"
          pkg="nodelet" type="nodelet"
          args="standalone jsk_pcl_utils/TfTransformCloud">
          <remap from="~input" to="/kinect_head/depth_registered/points"/>
      <rosparam>
        target_frame_id: base_footprint
      </rosparam>
  </node>

  <node name="rects_to_cpi_ssd"
        pkg="jsk_recognition_utils" type="rect_array_to_cluster_point_indices.py"
        output="screen" >
    <remap from="~input" to="/edgetpu_object_detector/output/rects"/>
    <remap from="~input/info" to="$(arg RGB_CAMERA_INFO)"/>
    <rosparam>
      always_subscribe: true
      approximate_sync: true
      use_info: true
    </rosparam>
  </node>

  <node name="cluster_point_indices_to_point_indices"
        pkg="nodelet" type="nodelet"
        args="standalone jsk_pcl_utils/ClusterPointIndicesToPointIndices">
    <remap from="~input" to="/rects_to_cpi_ssd/output"/>
    <rosparam>
      index: 0
    </rosparam>
  </node>

  <node name="extract_indices" pkg="jsk_pcl_ros" type="extract_indices">
    <remap from="~input" to="/kinect_head/depth_registered/points" />
    <remap from="~indices" to="/cluster_point_indices_to_point_indices/output"/>
    <rosparam>
      approximate_sync: true
    </rosparam>
  </node>

  <node name="pan_mask_polygon_pub" pkg="friedegg_generator" type="pan_mask_polygon.py"/>

</launch>
